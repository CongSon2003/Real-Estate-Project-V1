{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext", // resolve file ESM chuẩn (dùng .js / .ts extension).
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true, // Bạn chỉ được phép import/export theo đúng ngữ nghĩa module bạn đang dùng.
    "isolatedModules": true, // TS phải phân biệt type export và value export rõ ràng
    
    "noEmit": true,
    "allowImportingTsExtensions": true // TypeScript mặc định không cho import file .ts trực tiếp
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
